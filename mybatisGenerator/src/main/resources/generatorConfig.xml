<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="mysqlgenerator" targetRuntime="MyBatis3Simple">
        <!--将sql分隔符改为单引号-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--取消注释-->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!--<jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test?useUnicode=true"
                        userId="root"
                        password="root"/>-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.1.222:3306/shucong_mall?useUnicode=true"
                        userId="root"
                        password="123456"/>

        <javaModelGenerator targetPackage="com.test.model" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="com.test.mapper" targetProject="src/main/java"/>

        <javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="com.test.mapper" targetProject="src/main/java"/>

        <!--生成全部的表-->
        <table tableName="%"/>

    </context>

</generatorConfiguration>